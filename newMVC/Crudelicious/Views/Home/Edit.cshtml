@model Dish

<h1>Edit @Model.Name</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DishId" />
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Chef">Chef</label>
        <input asp-for="Chef" class="form-control" />
        <span asp-validation-for="Chef" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tastiness">Tastiness</label>
        <input asp-for="Tastiness" class="form-control" />
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Calories">Calories</label>
        <input asp-for="Calories" class="form-control" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>