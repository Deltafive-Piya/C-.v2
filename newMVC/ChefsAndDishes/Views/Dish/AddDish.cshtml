@model Dish
@await Html.PartialAsync("_navBar")

<h1>Create a New Dish</h1>

<form asp-action="CreateDish" asp-controller="Dish" method="post"> //asp-controller
    <div class="form-group">
        <label asp-for="DishName">Name</label>
        <input asp-for="DishName" class="form-control" />
        <span asp-validation-for="DishName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChefId">Chef</label>
        <select asp-for="ChefId" class="form-control" asp-items="ViewBag.ChefList">//asp-items
            <option value="">Chef</option>
        </select>
        <span asp-validation-for="ChefId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Calories">Calories</label>
        <input asp-for="Calories" class="form-control" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tastiness">Tastiness</label>
        <select asp-for="Tastiness" class="form-control">
            @for (int i = 1; i < 6; i++)
            {
            <option value="@i">@i</option>

            }
        </select>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<a asp-controller="Home" asp-action="Index">Back to List</a>