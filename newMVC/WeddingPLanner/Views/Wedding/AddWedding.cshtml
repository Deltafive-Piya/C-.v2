@model Wedding

<div class="custom-container">
    <h4 class="custom-heading">Plan a Wedding</h4>
    <form asp-action="CreateWedding" asp-controller="Wedding" method="post">
        <div class="form-group">
            <label asp-for="WedderOne">Wedder One:</label>
            <input asp-for="WedderOne" class="form-control" placeholder="Wedder One" />
            <span asp-validation-for="WedderOne" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WedderTwo">Wedder Two:</label>
            <input asp-for="WedderTwo" class="form-control" placeholder="Wedder Two" />
            <span asp-validation-for="WedderTwo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MarriageDate">Date:</label>
            <input asp-for="MarriageDate" class="form-control" placeholder="Date" />
            <span asp-validation-for="MarriageDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address:</label>
            <input asp-for="Address" class="form-control" placeholder="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>